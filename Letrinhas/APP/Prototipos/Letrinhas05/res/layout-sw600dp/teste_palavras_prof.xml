<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/testPalavras"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="clip_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="21sp"
    android:paddingRight="21sp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.letrinhas05.Teste_Palavras_Prof" >
    
    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/logo2"
        android:text="@string/title_activity_teste__palavras"
        android:textColor="#5ddfff"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/txtVoicePlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtAvaliar"
        android:layout_alignRight="@+id/txtAvaliar"
        android:contentDescription="@string/play"
        android:src="@drawable/play" />

    <ImageButton
        android:id="@+id/txtVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/voltar"
        android:src="@drawable/voltar" />

    <ImageButton
        android:id="@+id/txtCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtVoltar"
        android:layout_alignRight="@+id/txtVoltar"
        android:layout_marginBottom="28dp"
        android:contentDescription="@string/sair"
        android:src="@drawable/cancelar" />

    <ImageButton
        android:id="@+id/txtAvaliar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtCancel"
        android:layout_alignLeft="@+id/txtVoltar"
        android:layout_alignRight="@+id/txtCancel"
        android:layout_marginBottom="22dp"
        android:contentDescription="@string/entrar"
        android:src="@drawable/valido" />
    
        <TableLayout
        android:id="@+id/txtControlo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="7dp" >

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000" >

            <Chronometer
                android:id="@+id/cromTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:gravity="right"
                android:paddingLeft="7sp"
                android:paddingRight="7sp"
                android:textColor="#50ff50"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lgdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#505050"
                android:text="@string/min"
                android:textColor="#eeeeee"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lgdseg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#505050"
                android:text="@string/sec"
                android:textColor="#eeeeee"
                android:textSize="18sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/pErrada"
                android:text="@string/pErrada"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ValueWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numer"
                android:textColor="#ff2020"
                android:textSize="21sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

        <ScrollView
            android:id="@+id/txtScroll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtVoltar"
            android:layout_below="@+id/textTitulo"
            android:layout_toLeftOf="@+id/txtControlo"
            android:background="#ccccff"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp" >

            <LinearLayout
                android:id="@+id/lllayer2"
                android:layout_width="match_parent"
                android:layout_height="@+id/txtTela"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/ToggleButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/teste"
                    android:textOff="@string/teste"
                    android:textOn="@string/teste"
                    android:textSize="24sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/txtScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtVoltar"
            android:layout_alignLeft="@+id/textTitulo"
            android:layout_alignTop="@+id/txtScroll1"
            android:layout_marginLeft="59dp"
            android:background="#ccccff"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp" >

            <LinearLayout
                android:id="@+id/lllayer"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/ToggleButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/teste"
                    android:textOff="@string/teste"
                    android:textOn="@string/teste"
                    android:textSize="24sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/txtScroll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtScroll2"
            android:layout_alignTop="@+id/txtScroll2"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/textTitulo"
            android:background="#ccccff"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="7dp" >

            <LinearLayout
                android:id="@+id/lllayer1"
                android:layout_width="match_parent"
                android:layout_height="@+id/txtTela"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/ToggleButton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/teste"
                    android:textOff="@string/teste"
                    android:textOn="@string/teste"
                    android:textSize="24sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </ScrollView>

</RelativeLayout>