<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Name Label -->

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:text="testId"
            android:textSize="17dip" />
        <EditText
            android:id="@+id/txtBoxId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:singleLine="true" android:layout_column="6" android:text="1"/>
    </TableRow>

    <!-- Input Name -->


    <!-- Price Label -->

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:text="StudentId"
            android:textSize="17dip" />
        <EditText
            android:id="@+id/txtBoxEstudanteId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:singleLine="true" android:layout_column="6" android:text="2"/>
    </TableRow>

    <!-- Input Price -->

    <!-- Description Label -->

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:text="Data"
            android:textSize="17dip" />
        <EditText
            android:id="@+id/txtBoxDate"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:gravity="top"
            android:lines="4"
            android:text="1-1-2014" android:layout_column="6"/>
    </TableRow>

    <!-- Input description -->

    <!-- Button Create Product -->

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:text="Observacoes"
            android:textSize="17dip" />
        <EditText
            android:id="@+id/txtBoxObservacoes"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:ems="10"
            android:gravity="top"
            android:lines="4" android:layout_column="4" android:layout_span="3" android:inputType="none"
            android:text="coisas"/>
    </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingLeft="10dip"
                  android:paddingRight="10dip" android:paddingTop="10dip" android:text="wpm"
                  android:textSize="17dip" android:id="@+id/textView" android:layout_column="0"/>
        <EditText android:id="@+id/txtBoxWpm" android:layout_width="fill_parent" android:layout_height="36dp"
                  android:ems="10"
                  android:gravity="top" android:lines="4" android:layout_column="6"
                  android:inputType="none" android:text="12.3"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Button
            android:id="@+id/btnSendResult"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnSendResult" android:layout_column="0" android:layout_span="7"/>
    </TableRow>


</TableLayout>
