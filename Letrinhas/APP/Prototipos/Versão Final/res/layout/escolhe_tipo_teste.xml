<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/escTipoTeste"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80bb00"
                android:gravity="clip_vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/dim30"
                android:paddingRight="@dimen/dim30"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:screenOrientation="landscape">

    <Button
            android:id="@+id/escTipoTVoltar"
            android:layout_width="@dimen/dim100"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/voltar"
            android:drawableTop="@drawable/voltar"
            android:scaleType="fitCenter"
            android:text="@string/voltar" />

    <Button
            android:id="@+id/btnTestMulti"
            android:layout_width="@dimen/dim300"
            android:layout_height="@dimen/dim220"
            android:drawableTop="@drawable/imags"
            android:scaleType="fitCenter"
            android:text="Interpretação através de Imagens"
            android:textColor="#2b81aa"
            android:textSize="@dimen/dim30"
            android:textStyle="bold"
            android:layout_centerVertical="true" android:layout_alignTop="@+id/btnLeituraTest"
            android:layout_toRightOf="@+id/btnLeituraTest"/>

    <Button
            android:id="@+id/btnLeituraTest"
            android:layout_width="@dimen/dim300"
            android:layout_height="@dimen/dim220"
            android:drawableTop="@drawable/textos"
            android:scaleType="fitCenter"
            android:text="Leitura de Textos"
            android:textColor="#2b81aa"
            android:textSize="@dimen/dim30"
            android:textStyle="bold"
            android:layout_alignTop="@+id/btnTestePalav" android:layout_toRightOf="@+id/btnTestePalav"
            android:layout_marginRight="@dimen/dim50"/>

    <Button
            android:id="@+id/btnTestePalav"
            android:layout_width="@dimen/dim300"
            android:layout_height="@dimen/dim220"
            android:drawableTop="@drawable/palavras"
            android:scaleType="fitCenter"
            android:text="Leitura de Palavras"
            android:textColor="#2b81aa"
            android:textSize="@dimen/dim35"
            android:textStyle="bold"
            android:layout_centerVertical="true" android:layout_alignLeft="@+id/escDRodape"
            android:layout_marginRight="@dimen/dim50"/>

    <ImageView
            android:id="@+id/escDlogoEsTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/letrinhas" />

    <TextView
            android:id="@+id/escDCabecalho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/escDlogoEsTT"
            android:layout_toRightOf="@+id/escDlogoEsTT"
            android:text="@string/escolheTipoTeste"
            android:textColor="#5ddfff"
            android:textSize="@dimen/dim50"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/escTipoTEscola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/escDCabecalho"
            android:layout_below="@+id/escDCabecalho"
            android:text="Escola escolhida"
            android:textSize="@dimen/dim30"/>

    <ImageView
            android:id="@+id/escTipoTImgProf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/professor"
            android:src="@drawable/professora"/>

    <ImageView
            android:id="@+id/escTipoTImgAluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/aluno"
            android:src="@drawable/boy1"/>

    <TextView
            android:id="@+id/escTipoTProfname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/escTipoTImgProf"
            android:layout_toLeftOf="@+id/escTipoTImgProf"
            android:text="Professor escolhido"
            android:textSize="@dimen/dim30" android:layout_marginRight="@dimen/dim20"/>

    <TextView
            android:id="@+id/escTipoTAluni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/escTipoTTurma"
            android:layout_alignBottom="@+id/escTipoTTurma"
            android:layout_toLeftOf="@+id/escTipoTImgProf"
            android:text="Aluno Escolhido"
            android:textSize="@dimen/dim25" android:layout_marginRight="@dimen/dim10"/>

    <TextView
            android:id="@+id/escTipoTTurma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dim30"
            android:layout_toLeftOf="@+id/escTipoTAluni"
            android:text="Turma Escolhida"
            android:textSize="@dimen/dim25" />

    <TextView
            android:id="@+id/escDRodape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/escTipoTVoltar"
            android:text="@string/letrinhas"
            android:textColor="#5ddfff"
            android:textSize="@dimen/dim30"
            android:textStyle="bold" android:layout_marginLeft="@dimen/dim5"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione o Tipo de Teste:"
            android:id="@+id/txtTipoTDisciplina"
            android:textIsSelectable="false" android:textSize="@dimen/dim27" android:layout_below="@+id/escTipoTProfname"
            android:layout_alignLeft="@+id/btnTestePalav" android:layout_marginTop="@dimen/dim50" android:textColor="#ffffff"/>

</RelativeLayout>
