<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/testMulayoutrincipal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="clip_vertical"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/dim30"
                android:paddingRight="@dimen/dim30"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.letrinhas05.TesteMultimediaW" android:background="#0099CC"
                android:textAlignment="center">


    <TextView
            android:id="@+id/textCabecalhoTestMultimedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/logo2"
            android:text="@string/title_activity_teste__imagem"
            android:textColor="#36d2ff"
            android:textSize="@dimen/dim50"
            android:textStyle="bold" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/btnVoltarTestMult"
        android:layout_width="@dimen/dim100"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/voltar"
        android:drawableTop="@drawable/voltar"
        android:text="@string/voltar" />

    <TextView
            android:id="@+id/textRodapeTestMult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/letrinhas"
            android:textColor="#1ad6ff"
            android:textSize="@dimen/dim30"
            android:textStyle="bold" android:layout_alignParentBottom="true" android:layout_marginLeft="@dimen/dim120"/>












    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linearTestMultw"
            android:gravity="center|top" android:layout_marginBottom="@dimen/dim260"
            android:background="#9dc3e6"
            android:layout_marginRight="@dimen/dim160" android:layout_alignLeft="@+id/textRodapeTestMult"
            android:layout_below="@+id/txtCabeTituloTextMult">
        <TextView
                android:id="@+id/txtPerguntaTestM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/dim30" android:textAlignment="center"
                android:textStyle="bold" android:textIsSelectable="false" android:textColor="#000000"/>
        <ImageView
                android:id="@+id/imgPerguntaTestM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim10"
                android:paddingBottom="@dimen/dim10"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>



    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Titulo"
            android:id="@+id/txtCabeTituloTextMult" android:layout_below="@+id/textCabecalhoTestMultimedia"
            android:textSize="@dimen/dim40" android:textColor="#b54732"
            android:gravity="top"
            android:layout_alignParentTop="false"
            android:layout_alignRight="@+id/linearTestMultw" android:layout_alignLeft="@+id/linearTestMultw"/>


    <Button
            android:layout_height="wrap_content"
            android:id="@+id/btnOpcao1Mult"
            android:layout_width="fill_parent"
            android:layout_alignTop="@+id/bt1M"
            android:layout_alignBottom="@id/bt1M"
            android:layout_alignRight="@id/bt1M"
            android:layout_alignLeft="@id/bt1M" android:background="#cfb78c"
            android:textColor="#000000" android:textStyle="bold" android:textSize="@dimen/dim24"/>
    <RelativeLayout
            android:id="@id/bt1M"
            android:layout_width="@dimen/dim220"
            android:layout_height="@dimen/dim205"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/linearTestMultw" android:layout_above="@+id/textRodapeTestMult"
            android:layout_marginLeft="@dimen/dim65" android:layout_marginRight="@dimen/dim75">
        <ImageView
                android:id="@+id/btnOpcao1IMG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim10"
                android:paddingBottom="@dimen/dim10"

                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>


    <Button
            android:layout_height="wrap_content"
            android:id="@+id/btnOpcao2Mult"
            android:layout_width="fill_parent"
            android:layout_alignTop="@+id/bt2M"
            android:layout_alignBottom="@id/bt2M"
            android:layout_alignRight="@id/bt2M"
            android:layout_alignLeft="@id/bt2M" android:textStyle="bold" android:textSize="@dimen/dim24"
            android:textColor="#000000" android:background="#cfb78c"/>
    <RelativeLayout
            android:id="@id/bt2M"
            android:layout_width="@dimen/dim220"
            android:layout_height="@dimen/dim205" android:layout_alignBottom="@id/bt1M"
            android:layout_centerHorizontal="true" android:layout_toRightOf="@id/bt1M"
            android:layout_marginRight="@dimen/dim75">
        <ImageView
                android:id="@+id/btnOpcao2IMG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim10"
                android:paddingBottom="@dimen/dim10"

                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>


    <Button
            android:layout_height="wrap_content"
            android:id="@+id/btnOpcao3Mult"
            android:layout_width="fill_parent"
            android:layout_alignTop="@+id/bt3M"
            android:layout_alignBottom="@id/bt3M"
            android:layout_alignRight="@id/bt3M"
            android:layout_alignLeft="@id/bt3M" android:textStyle="bold" android:textSize="@dimen/dim24"
            android:textColor="#000000" android:background="#cfb78c"/>
    <RelativeLayout
            android:id="@id/bt3M"
            android:layout_width="@dimen/dim220"
            android:layout_height="@dimen/dim205"
            android:layout_centerHorizontal="true" android:layout_toRightOf="@id/bt2M"
            android:layout_alignBottom="@id/bt2M">
        <ImageView
                android:id="@+id/btnOpcao3IMG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim10"
                android:paddingBottom="@dimen/dim10"

                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/dim100"
        android:layout_height="@dimen/dim100"
        android:id="@+id/imageView"
        android:src="@drawable/imags" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>

</RelativeLayout>