<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/escEscola"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:configChanges="orientation|keyboardHidden|screenSize"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/dim40"
    android:paddingRight="@dimen/dim40"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="landscape"
    tools:context="com.letrinhas05.escolhe.EscolheEscola" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/letrinhas"
        android:src="@drawable/letrinhas" />

    <TextView
        android:id="@+id/Rodape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnVoltarEscolherEscola"
        android:layout_marginLeft="@dimen/dim10"
        android:layout_toRightOf="@+id/btnVoltarEscolherEscola"
        android:text="@string/letrinhas"
        android:textColor="#5ddfff"
        android:textSize="@dimen/dim30"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/svEscolher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Rodape"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Cabecalho"
        android:layout_toRightOf="@+id/logo"
        android:background="#0099cc"
        android:clickable="true"
        android:contentDescription="@string/escola" >

        <TableLayout
            android:id="@+id/tblEscolhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >

            <TableRow
                android:id="@+id/linha01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true" >

                <Button
                    android:id="@+id/bt4"
                    android:layout_width="@dimen/dim250"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dim10"
                    android:layout_marginTop="@dimen/dim10"
                    android:layout_marginRight="@dimen/dim15"
                    android:layout_marginLeft="@dimen/dim15"
                    android:contentDescription="@string/escola"
                    android:drawableTop="@drawable/escola"
                    android:text="Escola Básica e Secundária Artur Gonçalves de Torres Novas"
                    android:textSize="@dimen/dim25" />

            </TableRow>

        </TableLayout>

    </ScrollView>

    <TextView
        android:id="@+id/Cabecalho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logo"
        android:layout_toRightOf="@+id/logo"
        android:text="@string/title_activity_escolhe_escola"
        android:textColor="#5ddfff"
        android:textSize="@dimen/dim50"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnVoltarEscolherEscola"
        android:layout_width="@dimen/dim100"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/logo"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/voltar"
        android:drawableTop="@drawable/voltar"
        android:text="@string/voltar" />

</RelativeLayout>