<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/escEscola"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:configChanges="orientation|keyboardHidden|screenSize"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="28dp"
    android:paddingRight="28dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="landscape"
    tools:context="com.letrinhas05.escolhe.EscolheEscola" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/letrinhas"
        android:src="@drawable/letrinhas" />

    <TextView
        android:id="@+id/Rodape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnVoltarEscolherEscola"
        android:layout_marginLeft="10sp"
        android:layout_toRightOf="@+id/btnVoltarEscolherEscola"
        android:text="@string/letrinhas"
        android:textColor="#5ddfff"
        android:textSize="21dp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/svEscolher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Rodape"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Cabecalho"
        android:layout_toRightOf="@+id/btnVoltarEscolherEscola"
        android:background="#0099cc"
        android:clickable="true"
        android:contentDescription="@string/escola" >

        <TableLayout
            android:id="@+id/tblEscolhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" >

            <TableRow
                android:id="@+id/linha01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true" >

                <Button
                    android:id="@+id/Button04"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="@string/escola"
                    android:drawableTop="@drawable/escola"
                    android:text="Escola Básica e Secundária Artur Gonçalves de Torres Novas"
                    android:textSize="18dp" />

            </TableRow>

        </TableLayout>

    </ScrollView>

    <TextView
        android:id="@+id/Cabecalho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logo"
        android:layout_toRightOf="@+id/logo"
        android:text="@string/title_activity_escolhe_escola"
        android:textColor="#5ddfff"
        android:textSize="35dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnVoltarEscolherEscola"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/logo"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/voltar"
        android:drawableTop="@drawable/voltar"
        android:text="@string/voltar" />

</RelativeLayout>