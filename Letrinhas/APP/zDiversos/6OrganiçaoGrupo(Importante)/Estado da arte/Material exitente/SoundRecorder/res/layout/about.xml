<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dip" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">
    <LinearLayout 
        android:gravity="center_horizontal" 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:paddingTop="45dip">
        <TextView android:id="@+id/project_name"
            android:drawableTop="@drawable/ic_launcher_soundrecorder" 
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="15dip" 
            android:textSize="20dip" />
        <TextView android:id="@+id/buildText" 
            android:textSize="16dip" 
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="2dip" />
        <TextView android:id="@+id/app_website" 
            android:autoLink="web" 
	        android:layout_gravity="center" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="2dip" />
    </LinearLayout>
    <LinearLayout 
        android:gravity="center_horizontal" 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginBottom="20dip" 
        android:layout_alignParentBottom="true">
        <TextView android:id="@+id/copyrights_one" 
            style="?android:attr/textAppearanceSmall"
            android:layout_gravity="center" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/copyrights_two" 
            style="?android:attr/textAppearanceSmall" 
            android:layout_gravity="center" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>